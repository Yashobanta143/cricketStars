<% const username = userData.user; %>
<%- include("partials/header.ejs", {username}) %>
<main>
    <body>
        <div id="profile-div">
            <p><strong><%= userData ? userData.user : '' %>'s Profile</strong></p>
            <img id="profile-picture-preview" src="<%= userData ? userData.userDp : 'default-image.png' %>" alt="Profile Picture">
            <!-- Overlay container for zoomed image -->
            <div class="zoom-overlay" id="zoom-overlay">
                <img src="<%= userData ? userData.userDp : 'default-image.png' %>" alt="Zoomed Profile Picture" class="zoomed-picture">
            </div>
            <p><strong>Username</strong></p>
            <p id="user"><%= userData ? userData.user : '' %></p>
            <p><strong>Phone Number</strong></p>
            <p><%= userData ? userData.phno : '' %></p>
            <p><strong>Email</strong></p>
            <p><%= userData ? userData.email : '' %></p>
            <p><strong>Role</strong></p>
            <p><%= userData ? userData.role : '' %></p>
            <p><strong>Batting Style</strong></p>
            <p><%= userData ? userData.bat : ''  %></p>
            <p><strong>Bowling Style</strong></p>
            <p><%= userData ? userData.bowl : '' %></p>
            <p><strong>Acheivements</strong></p>
            <p><%= userData ? userData.achievement : '' %></p>
            <button id="back-btn" type="button">Back</button>
        </div>
        <script>
            const backBtn = document.getElementById('back-btn');
            const img = document.getElementById('profile-picture-preview');
            const zoomOverlay = document.getElementById('zoom-overlay');
            const zoomedPicture = document.querySelector('.zoomed-picture');
            backBtn.addEventListener('click', () => {
                window.history.back();
            });

            img.addEventListener('click', () => {
            zoomOverlay.style.display = 'block';
            zoomedPicture.src = img.src;
            });

            zoomOverlay.addEventListener('click', () => {
            zoomOverlay.style.display = 'none';
            });
        </script>
    </body>
</main>

